<?xml version="1.0" encoding="ISO-8859-1"?>
<project basedir="." default="main" name="build for UPnP Device Source Generation generated by ${author} at ${date}">
<target depends="init" name="main">
<antcall target="generate"/>
</target>
<target name="init">
<mkdir dir="generated"/>
<tstamp>
<format locale="en" pattern="d-MMMM-yyyy hh:mm aa" property="date"/>
</tstamp>
<property value="generated" name="generation.dir"/>
<property value="${author}" name="author"/>
</target>
<target name="generate">
<mkdir dir="${generation.dir}/res"/>
<mkdir dir="${generation.dir}/manifest"/>
<mkdir dir="${generation.dir}/src/fr/imag/adele/bundle/upnp/position"/>
<mkdir dir="${generation.dir}/src/fr/imag/adele/bundle/upnp/position/device"/>
<mkdir dir="${generation.dir}/src/fr/imag/adele/bundle/upnp/position/service"/>
<mkdir dir="${generation.dir}/src/fr/imag/adele/bundle/upnp/position/impl"/>
<xslt classpath="." style="device2class.xsl" out="${generation.dir}/src/fr/imag/adele/bundle/upnp/position/device/PositionDevice.java" in="res/device/PositionDevice1.xml">
<param expression="${date}" name="date"/>
<param expression="${author}" name="author"/>
<param expression="fr.imag.adele.bundle.upnp.position" name="package"/>
<param expression="PositionDevice" name="classname"/>
<outputproperty value="text" name="method"/>
<outputproperty value="ISO-8859-1" name="encoding"/>
<outputproperty value="yes" name="indent"/>
</xslt>
<xslt classpath="." style="scdp2class.xsl" out="${generation.dir}/src/fr/imag/adele/bundle/upnp/position/service/PositionSensor.java" in="res/service/PositionSensor1.xml">
<param expression="${date}" name="date"/>
<param expression="${author}" name="author"/>
<param expression="fr.imag.adele.bundle.upnp.position" name="package"/>
<param expression="PositionSensor" name="classname"/>
<outputproperty value="text" name="method"/>
<outputproperty value="ISO-8859-1" name="encoding"/>
<outputproperty value="yes" name="indent"/>
</xslt>
<xslt classpath="." style="scdp2itf.xsl" out="${generation.dir}/src/fr/imag/adele/bundle/upnp/position/PositionSensorModel.java" in="res/service/PositionSensor1.xml">
<param expression="${date}" name="date"/>
<param expression="${author}" name="author"/>
<param expression="fr.imag.adele.bundle.upnp.position" name="package"/>
<param expression="PositionSensor" name="classname"/>
<outputproperty value="text" name="method"/>
<outputproperty value="ISO-8859-1" name="encoding"/>
<outputproperty value="yes" name="indent"/>
</xslt>
</target>
<target name="clean">
<delete dir="generated"/>
</target>
</project>
